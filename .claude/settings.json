{
  "permissions": {
    "allow": [],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const fs=require('fs'),p='.claude-shared/hooks/memory/session-start.js';if(fs.existsSync(p))require('./'+p)\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const fs=require('fs'),p='.claude-shared/hooks/memory/user-prompt-submit.js';if(fs.existsSync(p))require('./'+p)\"",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const fs=require('fs'),p='.claude-shared/hooks/memory/post-tool-use.js';if(fs.existsSync(p))require('./'+p)\"",
            "timeout": 1000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude-shared/hooks/auto-update-memory.js",
            "timeout": 30000
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const fs=require('fs'),p='.claude-shared/hooks/memory/stop.js';if(fs.existsSync(p))require('./'+p)\"",
            "timeout": 30000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude-shared/scripts/hooks/pre-compact.js"
          }
        ]
      }
    ]
  }
}
